<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="reminder"
            type="dev.shorthouse.habitbuilder.model.Reminder" />
        <variable
            name="clickListener"
            type="dev.shorthouse.habitbuilder.adapter.ActiveReminderListAdapter.ClickListener" />
        <import type="java.time.LocalDateTime" />
        <import type="java.time.Instant" />
        <import type="java.time.ZoneId" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:onClick="@{() -> clickListener.onClick(reminder, 0)}">


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/reminder_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@{reminder.name}"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Brush teeth" />

        <TextView
            android:id="@+id/elapsed_intervals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@{String.valueOf((Instant.now().epochSecond - reminder.startEpoch) / reminder.repeatInterval)}"
            app:layout_constraintBottom_toBottomOf="@+id/reminder_name"
            app:layout_constraintStart_toEndOf="@+id/reminder_name"
            app:layout_constraintTop_toTopOf="@+id/reminder_name"
            tools:text="3" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/reminder_done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reminder_done"
            android:onClick="@{() -> clickListener.onClick(reminder, 1)}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </com.google.android.material.button.MaterialButton>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/reminder_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{LocalDateTime.ofInstant(Instant.ofEpochSecond(reminder.startEpoch), ZoneId.systemDefault()).toLocalTime().toString()}"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
            app:layout_constraintTop_toBottomOf="@id/reminder_name"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="21:49" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/reminder_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@{LocalDateTime.ofInstant(Instant.ofEpochSecond(reminder.startEpoch), ZoneId.systemDefault()).toLocalDate().toString()}"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
            app:layout_constraintStart_toEndOf="@+id/reminder_time"
            app:layout_constraintTop_toBottomOf="@+id/reminder_name"
            tools:text="2022-02-07" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?attr/dividerHorizontal"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/reminder_time"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>