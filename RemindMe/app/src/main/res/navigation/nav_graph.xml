<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/active_reminders">

    <fragment
        android:id="@+id/active_reminders"
        android:name="dev.shorthouse.remindme.fragments.ActiveReminderListFragment"
        android:label="Active Reminders"
        tools:layout="@layout/fragment_active_reminder_list">
        <action
            android:id="@+id/action_active_reminders_to_reminder_details"
            app:destination="@id/reminder_details" />
        <action
            android:id="@+id/action_active_reminders_to_add_edit_reminder"
            app:destination="@id/add_edit_reminder" />
    </fragment>

    <fragment
        android:id="@+id/all_reminders"
        android:name="dev.shorthouse.remindme.fragments.AllReminderListFragment"
        android:label="All Reminders"
        tools:layout="@layout/fragment_all_reminder_list" >
        <action
            android:id="@+id/action_all_reminders_to_reminder_details"
            app:destination="@id/reminder_details" />
        <action
            android:id="@+id/action_all_reminders_to_add_edit_reminder"
            app:destination="@id/add_edit_reminder"
            app:enterAnim="@anim/slide_in"
            app:popExitAnim="@transition/fade_out" />
    </fragment>

    <fragment
        android:id="@+id/add_edit_reminder"
        android:name="dev.shorthouse.remindme.fragments.AddEditReminderFragment"
        android:label="Add Edit Reminder"
        tools:layout="@layout/fragment_add_edit_reminder" >
        <argument
            android:name="id"
            android:defaultValue="0L"
            app:argType="long" />
        <argument
            android:name="isEditReminder"
            android:defaultValue="false"
            app:argType="boolean" />
    </fragment>

    <fragment
        android:id="@+id/reminder_details"
        android:name="dev.shorthouse.remindme.fragments.ReminderDetailsFragment"
        android:label="Reminder Details"
        tools:layout="@layout/fragment_reminder_details">
        <argument
            android:name="id"
            android:defaultValue="0L"
            app:argType="long" />
        <action
            android:id="@+id/action_reminder_details_to_add_edit_reminder"
            app:destination="@id/add_edit_reminder" />
    </fragment>



</navigation>