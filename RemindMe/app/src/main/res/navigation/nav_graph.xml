<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/fragment_container_list">

    <fragment
        android:id="@+id/fragment_container_list"
        android:name="dev.shorthouse.remindme.fragments.ListHomeFragment"
        tools:layout="@layout/fragment_active_list">
        <action
            android:id="@+id/action_list_container_to_add"
            app:destination="@id/add" />
        <action
            android:id="@+id/action_list_container_to_details"
            app:destination="@id/details" />
    </fragment>

    <fragment
        android:id="@+id/add"
        android:name="dev.shorthouse.remindme.fragments.AddFragment"
        tools:layout="@layout/fragment_add_edit" />

    <fragment
        android:id="@+id/edit"
        android:name="dev.shorthouse.remindme.fragments.EditFragment"
        tools:layout="@layout/fragment_add_edit" >
        <argument
            android:name="id"
            android:defaultValue="0L"
            app:argType="long" />
    </fragment>

    <fragment
        android:id="@+id/details"
        android:name="dev.shorthouse.remindme.fragments.DetailsFragment"
        android:label="Reminder Details"
        tools:layout="@layout/fragment_details" >
        <argument
            android:name="id"
            android:defaultValue="0L"
            app:argType="long" />
        <action
            android:id="@+id/action_details_to_edit"
            app:destination="@id/edit" />
    </fragment>

</navigation>
