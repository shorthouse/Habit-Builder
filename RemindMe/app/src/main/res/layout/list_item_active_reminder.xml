<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="reminder"
            type="dev.shorthouse.remindme.model.Reminder" />
        <variable
            name="detailsClickListener"
            type="android.view.View.OnClickListener" />
        <variable
            name="doneClickListener"
            type="android.view.View.OnClickListener" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/active_reminder_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="@{detailsClickListener}">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/reminder_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="16dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@{reminder.name}"
            android:textStyle="bold"
            android:textColor="@color/on_primary"
            android:textSize="17sp"
            app:layout_constraintEnd_toStartOf="@+id/done_checkbox"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Brush teeth and don't forget to mouthwash and swill" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/reminder_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="14dp"
            android:text="@{reminder.getFormattedStartDate()}"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
            android:textColor="@color/subtitle_grey"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/reminder_name"
            tools:text="14 Aug 2022" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/reminder_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@{reminder.getFormattedStartTime()}"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
            android:textColor="@color/subtitle_grey"
            app:layout_constraintBottom_toBottomOf="@+id/reminder_date"
            app:layout_constraintStart_toEndOf="@+id/reminder_date"
            app:layout_constraintTop_toTopOf="@+id/reminder_date"
            tools:text="21:49" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/repeat_icon"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/ic_repeat"
            android:tint="@color/subtitle_grey"
            app:layout_constraintBottom_toBottomOf="@+id/notification_icon"
            app:layout_constraintStart_toEndOf="@+id/notification_icon"
            app:layout_constraintTop_toTopOf="@+id/notification_icon"
            app:showIfRepeatReminder="@{reminder.repeatInterval}" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/notification_icon"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/ic_notification_outline"
            android:tint="@color/subtitle_grey"
            app:layout_constraintBottom_toBottomOf="@+id/reminder_time"
            app:layout_constraintStart_toEndOf="@+id/reminder_time"
            app:layout_constraintTop_toTopOf="@+id/reminder_time" />

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/done_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:button="@drawable/checkbox_reminder_done"
            android:onClick="@{doneClickListener}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>