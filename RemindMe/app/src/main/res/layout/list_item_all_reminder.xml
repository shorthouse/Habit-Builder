<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="reminder"
            type="dev.shorthouse.remindme.model.Reminder" />
        <variable
            name="detailsClickListener"
            type="android.view.View.OnClickListener" />
    </data>
    
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/reminder_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@{reminder.name}"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Brush teeth" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/reminder_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
            android:text="@{reminder.getFormattedStartTime()}"
            app:layout_constraintTop_toBottomOf="@id/reminder_name"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="21:49" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/reminder_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
            android:text="@{reminder.getFormattedStartDate()}"
            app:layout_constraintStart_toEndOf="@+id/reminder_time"
            app:layout_constraintTop_toBottomOf="@+id/reminder_name"
            tools:text="2022-02-07" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?attr/dividerHorizontal"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/reminder_time"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>