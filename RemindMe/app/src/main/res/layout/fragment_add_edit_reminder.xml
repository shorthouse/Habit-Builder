<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="addReminderFragment"
            type="dev.shorthouse.remindme.fragments.AddEditReminderFragment" />
        <variable
            name="viewmodel"
            type="dev.shorthouse.remindme.viewmodel.AddReminderViewModel" />
        <variable
            name="reminder"
            type="dev.shorthouse.remindme.model.Reminder" />
        <import type="java.time.Instant" />
    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="16dp"
            tools:context=".fragments.AddEditReminderFragment">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/name_label"
                style="@style/ThemeOverlay.Material3.AutoCompleteTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_reminder_name"
                app:errorEnabled="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/name_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textAutoComplete"
                    android:singleLine="true"
                    android:maxLength="200"
                    android:imeOptions="actionDone"
                    android:text='@{reminder.name ?? ""}'
                    tools:text="Brush teeth" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/start_date_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:errorEnabled="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/name_label"
                app:startIconDrawable="@drawable/ic_calendar_today">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/start_date_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:hint="@string/hint_reminder_date"
                    android:inputType="none"
                    android:onClick="@{() -> addReminderFragment.displayDatePicker()}"
                    android:text="@{viewmodel.getStartDate(reminder)}"
                    tools:text="Fri 17 Jun 2024" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/start_time_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:errorEnabled="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/start_date_label"
                app:startIconDrawable="@drawable/ic_clock">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/start_time_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:hint="@string/hint_reminder_time"
                    android:text="@{viewmodel.getStartTime(reminder)}"
                    android:inputType="none"
                    android:onClick="@{() -> addReminderFragment.displayTimePicker()}"
                    tools:text="16:37 PM" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/notes_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/start_time_label"
                app:startIconDrawable="@drawable/ic_notes">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/notes_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_reminder_notes"
                    android:text='@{reminder.notes ?? ""}'
                    tools:text="Make sure scrubbed" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/notification_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@+id/notification_header"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/notification_header"
                tools:checked="true" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/notification_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/title_send_notification"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/notes_label" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/repeat_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/title_repeat_reminder"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/notification_header" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/repeat_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@+id/repeat_header"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/repeat_header"
                tools:checked="true" />

            <RadioGroup
                android:id="@+id/radio_repeat_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/repeat_header"
                app:showIfRepeatChecked="@{repeatSwitch.checked}">

                <RadioButton
                    android:id="@+id/radio_repeat_daily"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/radio_label_repeat_daily" />

                <RadioButton
                    android:id="@+id/radio_repeat_weekly"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/radio_label_repeat_weekly" />

                <RadioButton
                    android:id="@+id/radio_repeat_monthly"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/radio_label_repeat_monthly" />

                <RadioButton
                    android:id="@+id/radio_repeat_yearly"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/radio_label_repeat_yearly" />
            </RadioGroup>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</layout>