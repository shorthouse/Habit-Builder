<resources>
    <style name="Theme.RemindMe" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/secondary</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="android:colorBackground">@color/primary_variant</item>
        <item name="colorOnBackground">@color/white</item>

        <item name="colorSurface">@color/primary</item>
        <item name="colorOnSurface">@color/white</item>

        <item name="colorOnError">@color/black</item>

        <item name="android:statusBarColor">@color/primary</item>

        <item name="searchViewStyle">@style/Theme.RemindMe.SearchView</item>
        <item name="navigationViewStyle">@style/Theme.RemindMe.NavigationView</item>
    </style>
#
    <!-- Alert Dialog -->
    <style name="Theme.RemindMe.MaterialComponents.MaterialAlertDialog" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="buttonBarPositiveButtonStyle">@style/ButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/ButtonStyle</item>
    </style>

    <style name="ButtonStyle" parent="@style/Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/light_blue</item>
    </style>

    <!-- Search View -->
    <style name="Theme.RemindMe.SearchView" parent="Widget.AppCompat.SearchView">
        <item name="closeIcon">@drawable/ic_close_search</item>
        <item name="searchHintIcon">@null</item>
        <item name="queryHint">@string/top_app_bar_search</item>
        <item name="queryBackground">@color/white</item>
        <item name="android:background">@drawable/search_rounded_corner</item>
    </style>

    <!-- Toolbar -->
    <style name="Theme.RemindMe.Toolbar" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">
        <item name="android:editTextColor">@color/black</item>
        <item name="android:textColorHint">@color/subtitle_grey</item>
    </style>

    <!-- Navigation View -->
    <style name="Theme.RemindMe.NavigationView" parent="Widget.MaterialComponents.NavigationView">
        <item name="materialThemeOverlay">@style/ThemeOverlay.RemindMe.NavigationView</item>
    </style>

    <style name="ThemeOverlay.RemindMe.NavigationView" parent="">
        <item name="colorPrimary">@color/light_blue</item>
    </style>


</resources>